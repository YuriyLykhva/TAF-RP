pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                bat 'git clone https://github.com/YuriyLykhva/TAF-RP.git'
            }
        }
        stage('Build') {
            steps {
                bat 'mvn install'
            }
        }
        stage('Test') {
            steps {
                bat 'mvn test'
            }
        }
        stage('Deploy') {
            steps {
                bat 'copy target\\your-maven-project.war \\your-server\\opt\\tomcat\\webapps'
            }
        }
    }
}
